<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/prestoPrimary</item>
        <item name="colorPrimaryDark">@color/prestoDarker</item>
        <item name="colorAccent">@color/pink_primary_dark</item>
        <item name="colorControlHighlight">@color/colorHighlight</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>


    <style name="LoginActivity" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/pink_primary_dark</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="HomeActivity" parent="AppTheme">
        <item name="android:actionModeBackground">@color/prestoPrimary</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


    <!--App Bar-->
    <style name="AppBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/appbar_title_size</item>
        <item name="android:fontFamily">@font/domine</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--Cursor-->
    <style name="cursor_green">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@color/prestoDarker</item>
    </style>

    <style name="cursor_pink">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@color/pink_primary</item>
    </style>


    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/register_field_text_size</item>
    </style>


    <!--Register Activity-->
    <style name="register_view_line">
        <item name="android:layout_width">@dimen/register_view_line_width</item>
        <item name="android:layout_height">@integer/layout_match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="register_field_layout">
        <item name="android:layout_width">@integer/layout_match_parent</item>
        <item name="android:layout_height">@dimen/register_field_layout_height</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:background">@drawable/gradient_light_gray</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="register_edt">
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:layout_height">@integer/layout_match_parent</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">@dimen/register_field_text_size</item>
        <item name="android:paddingTop">@dimen/register_field_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/register_field_vertical_padding</item>
        <item name="android:paddingStart">@dimen/register_field_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/register_field_horizontal_padding</item>
        <item name="android:theme">@style/cursor_pink</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="register_img" parent="Theme.AppCompat">
        <item name="android:tint">@color/pink_primary_dark</item>
        <item name="android:layout_width">@dimen/register_img_width</item>
        <item name="android:layout_height">@integer/layout_match_parent</item>
        <item name="android:padding">@dimen/register_img_padding</item>
    </style>

    <style name="register_spn">
        <item name="android:layout_width">@integer/layout_match_parent</item>
        <item name="android:layout_height">@dimen/register_spn_height</item>
        <item name="android:padding">@dimen/register_spn_padding</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="register_radio_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@integer/layout_match_parent</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">@dimen/register_field_text_size</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <!--Login Activity-->
    <style name="college_name">
        <item name="android:layout_width">@integer/layout_match_parent</item>
        <item name="android:layout_height">@integer/layout_wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/college_name_text_size</item>
        <item name="android:fontFamily">@font/domine</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="login_view_line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/white_line_height</item>
        <item name="android:background">@color/white_line</item>
    </style>

    <style name="login_edit_text">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:theme">@style/cursor_green</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/login_edt_height</item>
        <item name="android:drawablePadding">@dimen/login_edt_drawable_padding</item>
        <item name="android:padding">@dimen/login_edt_padding</item>
        <item name="android:textSize">@dimen/login_edt_text_size</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="login_button">
        <item name="android:layout_width">@integer/layout_match_parent</item>
        <item name="android:layout_height">@dimen/login_btn_layout_height</item>
        <item name="android:textSize">@dimen/login_btn_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>


    <!--UserLogin Profile Activity-->
    <style name="profile_field_img">
        <item name="android:layout_width">@dimen/profile_img_field_width</item>
        <item name="android:layout_height">@dimen/profile_img_field_height</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginTop">@dimen/profile_field_margin_top</item>
    </style>

    <style name="profile_view_line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/profile_view_line_height</item>
        <item name="android:background">@color/gray_very_light</item>
    </style>


    <style name="profile_field_text">
        <item name="android:layout_width">@integer/layout_wrap_content</item>
        <item name="android:layout_height">@integer/layout_wrap_content</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">@dimen/profile_text_field_size</item>
    </style>


    <style name="profile_title_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/profile_content_horizontal_margin</item>
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:textSize">@dimen/profile_username_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/balth.ttf</item>
    </style>


    <!--UserLogin Profile List Activity-->
    <style name="profile_list_field_img">
        <item name="android:layout_width">@dimen/profile_list_img_field_width</item>
        <item name="android:layout_height">@dimen/profile_list_img_field_height</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginTop">@dimen/profile_list_field_margin_top</item>
    </style>

    <style name="profile_list_field_text">
        <item name="android:layout_width">@integer/layout_wrap_content</item>
        <item name="android:layout_height">@integer/layout_wrap_content</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">@dimen/profile_list_text_field_size</item>
    </style>

    <style name="profile_list_title_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/profile_list_content_horizontal_margin</item>
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:textSize">@dimen/profile_list_text_field_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/balth.ttf</item>
    </style>


    <style name="CustomTIL" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <!--edit profile-->

    <style name="edit_profile_field_layout">
        <item name="android:layout_width">@integer/layout_match_parent</item>
        <item name="android:layout_height">@dimen/register_field_layout_height</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="edit_profile_base_img">
        <item name="android:layout_width">@dimen/register_img_width</item>
        <item name="android:layout_height">@integer/layout_match_parent</item>
        <item name="android:padding">@dimen/register_img_padding</item>
    </style>

    <style name="edit_profile_img" parent="edit_profile_base_img">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@color/prestoPrimary</item>
    </style>


    <style name="edit_profile_img_btn" parent="edit_profile_base_img">
        <item name="android:background">@color/editTextBG</item>
    </style>


    <style name="edit_profile_edt">
        <item name="android:background">@color/editTextBG</item>
        <item name="android:layout_height">@integer/layout_match_parent</item>
        <item name="android:textColor">@color/edit_profile_text</item>
        <item name="android:textSize">@dimen/register_field_text_size</item>
        <item name="android:paddingStart">@dimen/register_field_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/register_field_horizontal_padding</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="edit_profile_radio_btn" parent="register_radio_btn">
        <item name="android:textColor">@color/edit_profile_text</item>
    </style>

    <style name="edit_profile_spn" parent="register_spn" />


    <style name="edit_profile_view_line" parent="register_view_line">
        <item name="android:layout_width">@dimen/register_view_line_width</item>
        <item name="android:layout_height">@integer/layout_match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="edit_profile_edt_name" parent="edit_profile_edt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.49</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:maxLength">15</item>
    </style>



</resources>
